local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")
local CoreGui = game:GetService("CoreGui")
local TweenService = game:GetService("TweenService")

local Player = Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")

-- Set up the GUI to appear in the center
local function createCenteredGUI()
    local WarningUI = Instance.new("ScreenGui")
    WarningUI.Parent = CoreGui

    local Main = Instance.new("Frame")
    Main.AnchorPoint = Vector2.new(0.5, 0.5)
    Main.Position = UDim2.new(0.5, 0, 0.5, 0)
    Main.Size = UDim2.new(0, 400, 0, 400)
    Main.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    Main.BackgroundTransparency = 1
    Main.Parent = WarningUI

    local BackgroundHolder = Instance.new("Frame")
    BackgroundHolder.Size = UDim2.new(1, 0, 1, 0)
    BackgroundHolder.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    BackgroundHolder.BackgroundTransparency = 0.25
    BackgroundHolder.Parent = Main

    -- Add other components as before...
    -- For example, a top bar
    local TopBar = Instance.new("Frame")
    TopBar.Size = UDim2.new(1, 0, 0, 2)
    TopBar.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    TopBar.Parent = BackgroundHolder

    -- Gradient
    local UIGradient = Instance.new("UIGradient")
    UIGradient.Color = ColorSequence.new{ColorSequenceKeypoint.new(0, Color3.fromRGB(53, 149, 146)), ColorSequenceKeypoint.new(1, Color3.fromRGB(159, 159, 80))}
    UIGradient.Parent = TopBar

    -- Title for the warning
    local TitleHolder = Instance.new("Frame")
    TitleHolder.Size = UDim2.new(0.9, 0, 0.9, 0)
    TitleHolder.Position = UDim2.new(0.5, 0, 0.5, 0)
    TitleHolder.AnchorPoint = Vector2.new(0.5, 0.5)
    TitleHolder.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    TitleHolder.BorderColor3 = Color3.fromRGB(44, 44, 44)
    TitleHolder.BorderSizePixel = 2
    TitleHolder.Parent = BackgroundHolder

    local Title = Instance.new("TextLabel")
    Title.Text = "Warning"
    Title.Size = UDim2.new(0, 75, 0, 20)
    Title.Position = UDim2.new(0, 15, 0, -12)
    Title.TextScaled = true
    Title.TextColor3 = Color3.fromRGB(235, 235, 235)
    Title.Font = Enum.Font.SourceSansBold
    Title.Parent = TitleHolder

    -- Exit button
    local Exit = Instance.new("TextButton")
    Exit.Text = "Ok"
    Exit.Size = UDim2.new(0, 250, 0, 20)
    Exit.Position = UDim2.new(0.5, 0, 0.9, 0)
    Exit.AnchorPoint = Vector2.new(0.5, 0.5)
    Exit.BackgroundColor3 = Color3.fromRGB(36, 36, 36)
    Exit.TextColor3 = Color3.fromRGB(255, 255, 255)
    Exit.Font = Enum.Font.SourceSans
    Exit.TextScaled = true
    Exit.Parent = TitleHolder
    Exit.MouseButton1Down:Connect(function()
        WarningUI:Destroy()  -- Close the warning on button click
    end)

    -- Optional: You can add any text or other components here
    local WarningText = Instance.new("TextLabel")
    WarningText.Text = "> Anti-<font color=\"#6ea644\">Chat Logger</font> will not work here!"
    WarningText.Size = UDim2.new(1, -30, 0, 20)
    WarningText.Position = UDim2.new(0, 30, 0.05, 0)
    WarningText.RichText = true
    WarningText.TextScaled = true
    WarningText.TextColor3 = Color3.fromRGB(255, 255, 255)
    WarningText.Parent = TitleHolder
end

createCenteredGUI()
